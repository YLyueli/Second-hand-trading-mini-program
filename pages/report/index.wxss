Page {
  background-color: #fbfbfb;
}
.report_container {
  display: flex;
  flex-direction: column;
  align-items: center;
}
.report_content {
  width: 80%;
  height: 600rpx;
  margin: 60rpx auto;
  border: 2rpx solid #ccc;
  border-radius: 20rpx;
  background-color: #fff;
  opacity: 0.8;
  font-size: 30rpx;
  line-height: 60rpx;
  margin-bottom: 20rpx;
  overflow-y: scroll;
}
.report_content .textareaa {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  padding: 40rpx;
}
.report_btn {
  width: 60%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  border-radius: 60rpx;
  background-color: var(--themeColor);
  margin: 60rpx auto;
  color: #fff;
  font-size: 30rpx;
}
.tip {
  height: 60rpx;
  line-height: 60rpx;
  margin-bottom: 20rpx;
  color: #F74C56;
}
