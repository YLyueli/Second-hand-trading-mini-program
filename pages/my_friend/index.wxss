.friend_wrap .friend {
  display: flex;
  align-items: center;
  padding: 30rpx 60rpx;
  background-color: #fff;
  border-bottom: 1rpx solid #ececec;
}
.friend_wrap .friend image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}
.friend_wrap .friend .info {
  height: 120rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.friend_wrap .friend .info .user_name {
  font-size: 30rpx;
  font-weight: 600;
  color: #333;
}
.friend_wrap .friend .info .user_school {
  font-size: 28rpx;
  color: #4e4e4e;
}
.none_bus {
  height: 100vh;
  background-color: #fff;
  font-size: 34rpx;
  color: rgb(78, 78, 78);
  text-align: center;
  line-height: 80vh;
}