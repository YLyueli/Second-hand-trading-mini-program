.bus_base_info {
  height: 180rpx;
  background-color: #fff;
  opacity: 1;
  z-index: 999;
  border-bottom: 1rpx solid #E8E8E8;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin: 15rpx;
  border-radius: 30rpx;
  padding: 30rpx;
  height: 220rpx;
}
.bus_base_info .top_wrap {
  display: flex;
  justify-content: space-between;
}
.bus_base_info .top_wrap .bus_img_wrap {
  width: 160rpx;
  height: 160rpx;
  margin-right: 20rpx;
}
.bus_base_info .top_wrap .bus_img_wrap image {
  width: 160rpx;
  height: 160rpx;
  border-radius: 10rpx;
}
.bus_base_info .top_wrap .bus_info {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.bus_base_info .top_wrap .bus_info .bus_price {
  font-size: 30rpx;
  font-weight: 600;
  color: #F74C56;
  text-align: right;
}
.bus_base_info .top_wrap .bus_info .bus_name {
  padding: 10rpx 0 20rpx 0;
  font-size: 30rpx;
}
.bus_base_info .bottom_wrap {
  display: flex;
  justify-content: flex-end;
}
.bus_base_info .bottom_wrap .bus_buy_btn {
  width: 160rpx;
  height: 60rpx;
  font-size: 28rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 60rpx;
  color: #534949;
  border: 1px solid #cac7c7;
  margin-top: 30rpx;
  margin-left: 20rpx;
}
.none_bus {
  height: 100vh;
  background-color: #fff;
  font-size: 34rpx;
  color: rgb(78, 78, 78);
  text-align: center;
  line-height: 80vh;
}